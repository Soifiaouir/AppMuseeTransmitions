{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<h2>Tableau de bord Administrateur</h2>
<p>Gérez les utilisateurs et les thèmes</p>

<div class="ligne">
    <a href="{{ path('admin_add_user') }}" class="buttonCreate">Créer un utilisateur</a>
    <a href="{{ path('add_theme') }}" class="buttonCreate">Créer un thème</a>
</div>

<div class="card">
    <h2>Gestion des utilisateurs</h2>

    {% if usersNeedingPasswordChange > 1 %}
        <p class="warning" style="color: var(--color-amber); font-weight: 600; text-align: center;">
            {{ usersNeedingPasswordChange }} utilisateurs doivent changer leurs mots de passe
        </p>
    {% elseif usersNeedingPasswordChange == 1 %}
        <p class="warning" style="color: var(--color-amber); font-weight: 600; text-align: center;">
            {{ usersNeedingPasswordChange }} utilisateur doit changer son mot de passe
        </p>
    {% endif %}

    {% if users|length == 0 %}
        <p>Aucun utilisateur dans la base de données</p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Rôle(s)</th>
                <th>Mot de passe à changer</th>
                <th>Mot de passe temporaire</th>
                <th>Date dernier changement</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr {% if user.ispasswordChange %} class="warning" {% endif %}>
                    <td>{{ user.username }}</td>
                    <td>
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <span >Admin</span>
                        {% else %}
                            Utilisateur
                        {% endif %}
                    </td>
                    <td>
                        {% if user.ispasswordChange %}
                            <span class="orange">OUI</span>
                        {% else %}
                            <span class="green">non</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.tempPassword %}
                            <div >
                                <code id="temp-pass-{{ user.id }}" >{{ user.tempPassword }}</code>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.passwordChangeDate %}
                            {{ user.passwordChangeDate|date('d/m/Y') }}
                        {% else %}
                            <em>Jamais</em>
                        {% endif %}
                    </td>
                    <td class="ligne">
                        <a href="{{ path('admin_reset_password', {'id': user.id}) }}"
                           class="buttonEdit"
                           onclick="return confirm('Réinitialiser le mot de passe de {{ user.username }} ?')">
                            Réinitialiser
                        </a>
                        <a href="{{ path('admin_remove_user', {'id': user.id}) }}"
                           class="buttonRemove"
                           onclick="return confirm('Supprimer cet utilisateur {{ user.username }} ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>

<hr class="separator">

<div class="card">
    <h2>Gestion des thèmes</h2>

    {% if themes|length == 0 %}
        <p>Aucun thème dans la base de données</p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th>Nom du thème</th>
                <th>Créé par</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for theme in themes %}
                <tr {% if theme.isArchived() %}style="background: #fff3cd;"{% endif %}>
                    <td>
                        <a href="{{ path('details_theme', {'id': theme.id}) }}">
                            {{ theme.name }}
                        </a>
                    </td>
                    <td>
                        {% if theme.createdBy %}
                            {{ theme.createdBy.username }}
                        {% else %}
                            <em>Non défini</em>
                        {% endif %}
                    </td>
                    <td>
                        {% if theme.isArchived() %}
                            <span class="orange">Archivé</span>
                        {% else %}
                            <span class="green">Actif</span>
                        {% endif %}
                    </td>
                    <td class="ligne">
                        {% if not theme.isArchived() %}
                            <a href="{{ path('edit_theme', {'id': theme.id}) }}" class="buttonEdit">Modifier</a>
                        {% endif %}

                        {% if theme.isArchived() %}
                            <a href="{{ path('unarchive_theme', {'id': theme.id}) }}" class="buttonCreate" onclick="return confirm('Désarchiver ce thème ?')">Activer</a>
                        {% else %}
                            <a href="{{ path('archive_theme', {'id': theme.id}) }}" class="buttonRemove" onclick="return confirm('Archiver ce thème ?')">Archiver</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}