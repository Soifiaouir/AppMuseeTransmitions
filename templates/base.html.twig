<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/Logo.png') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/normalize.css') }}">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
<body>
<header>
    <div id="head">
        <img src="{{ asset('img/Logo.png') }}" alt="logo" id="logo">
        {% include 'views/nav.html.twig' %}
    </div>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ label }}" data-flash="{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</header>

<main>
    {% block body %}{% endblock %}
</main>

<footer>
    <div class="footer">
        {% include 'views/footer.html.twig' %}
    </div>
</footer>
</body>
</html>
